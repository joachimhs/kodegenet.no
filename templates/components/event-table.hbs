<table class="table">
    <tr>
        <th>Dato</th>
        <th>Type</th>
        <th>Tittel</th>
        {{#if event.isInFuture}}
            <th>Ledige Plasser</th>
        {{/if}}
        <th>Anbefalt aldersgruppe</th>
        <th style="min-width: 100px;"></th>
    </tr>

    {{#each event in events}}
        <tr>
            <td>{{dmy_no event.date}} {{event.timeslot}}</td>
            <td class="capitalize">{{event.type}}</td>
            <td>{{event.name}}</td>
            {{#if event.isInFuture}}
                <td>{{event.remainingSpots}} ledige / {{event.capacity}} totalt</td>
            {{/if}}
            <td>{{event.ageGroup}}</td>
            <td>
                {{#if event.isKodeklubb}}
                    {{link-to "Mer Info" "kodeklubb.event" event classNames="label label-primary"}}

                {{/if}}

                {{#if event.isMakerspace}}
                    {{link-to "Mer Info" "makerspace.event" event classNames="label label-primary"}}
                {{/if}}

                {{#if event.isInFuture}}
                    {{#if event.hasSpotsRemaining}}
                        {{link-to "PÃ¥melding" "event.paamelding" event.id classNames="label label-primary"}}
                    {{else}}
                        <span class="label label-danger">Fullt</span>
                    {{/if}}
                {{/if}}
            </td>
        </tr>

    {{else}}
        <tr><td colspan="4">Nye kodekvelder blir annonsert snart!</td></tr>
    {{/each}}
</table>
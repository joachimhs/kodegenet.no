<div class="mainAreaIndex">
    {{#if page}}
        <div id="indexCarousel" class="index-intro-page">
            <div class="index-intro-box clearfix">
                <div class="pageContent led-background">
                    <h1>{{page.tittel}}</h1>

                    <div class="introText">
                        {{markdown page.content}}
                        {{link-to "Kodeklubb" "kodeklubb"}} {{link-to "Makerspace" "makerspace"}}
                    </div>
                </div>
                <div class="pageContent school-background">
                    <h1>{{indexKurs.tittel}}</h1>

                    <div class="introText">
                        {{markdown indexKurs.content}}
                        {{link-to "Skole" "page" "skole"}} {{link-to "Kurs" "page" "kurs"}}
                    </div>
                </div>
            </div>
            <div class="next-page">
                <span class="next-page-box" {{action "scrollToContent"}}>Siste Nytt &#x25BC;</span>
                <span class="next-page-box" {{action "scrollToKurs"}}>Påmelding &#x25BC;</span>
                <span class="next-page-box" {{action "scrollToEpostlister"}}>Epostlister &#x25BC;</span>
                <span class="next-page-box"><a style="color: #fff;" href="/medlem">Bli Medlem!</a></span>
            </div>
        </div>
    {{/if}}


    <div id="indexContent">
        <div class="greenContent">
            <div class="row pageContent">
                <div class="col-sm-12 col-md-6">
                    {{#each update in sortedUpdatesLimited}}
                        <div>
                            <h4>{{dmy_no update.publishedDate}} - {{update.title}}</h4>
                            <div class="updateContent">
                                {{#if update.image}}
                                    <img {{bind-attr src=update.image}} class="updateImage" />
                                {{/if}}

                                {{markdown update.updateIntro}}
                            </div>

                            {{#if update.content}}
                                <div>{{#link-to "news" update}}
                                    Les mer <span class="glyphicon glyphicon-chevron-right"></span>
                                {{/link-to}}</div>
                            {{/if}}

                            {{#if update.route}}
                                <div><a {{bind-attr href=update.route}}>Les Mer <span class="glyphicon glyphicon-chevron-right"></span></a></div>
                            {{/if}}

                            {{#if update.event}}
                                <div>{{#link-to "kodeklubb.event" update.event}}
                                    Mer informasjon og påmelding <span class="glyphicon glyphicon-chevron-right"></span>
                                {{/link-to}}</div>
                            {{/if}}
                        </div>
                        <hr width="25%" />

                    {{/each}}
                </div>
                <div class="col-sm-12 col-md-6 instagram-panel">
                    <div class="instagramHeader clearfix">
                        <img src="/figurer/instagram-logo-sketch.png" />
                        <div class="instagram-header-txt">Instagrams <br />@Kodegenet</div>
                    </div>
                    {{#each instagramPhoto in sortedInstagramsLimited}}
                        <div class="row">
                            <div class="col-md-4">
                                <a {{bind-attr href=instagramPhoto.link}}><img {{bind-attr src=instagramPhoto.thumbnail}} class="instagram-thumbnail" /></a>
                            </div>
                            <div class="col-md-8">
                                Av: <a {{bind-attr href=instagramPhoto.usernameLink}} >@{{instagramPhoto.postedBy}}</a><br/>
                                {{instagramPhoto.caption}}
                            </div>
                        </div>
                    {{/each}}
                </div>
                <div class="col-sm-12 col-md-12">
                    <div>{{#link-to "newsIndex"}}
                        Eldre Nyheter <span class="glyphicon glyphicon-chevron-right"></span>
                    {{/link-to}}</div>
                </div>
            </div>
        </div>

        <div id="indexKurs">
            <div class="row pageContent">

                <div class="col-sm-12 col-md-12">
                    <h1>{{controller.settings.upcoming_courses}}</h1>
                    {{event-table events=controllers.application.futureEvents}}

                    {{#if controller.epostliste.content}}
                        <h1>{{controller.settings.mailinglistHeader}}</h1>

                        {{markdown controller.epostliste.content}}
                    {{/if}}
                </div>
            </div>
        </div>

        <div id="indexEpostliste">
            {{#if controller.settings.adsenseLeaderboard}}
                <div class="row pageContent">
                    <div class="col-sm-12 col-md-12">
                        <div align="center">
                            {{markdown controller.settings.adsenseLeaderboard}}
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>

    </div>
</div>
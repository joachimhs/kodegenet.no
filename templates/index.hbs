<div class="headerIntroArea">
    {{#if page}}
        <h1>{{page.tittel}}</h1>

        <div class="introText">
            {{markdown page.content}}
        </div>
    {{/if}}

    <div class="introCourses">
        {{#each course in controller.courses}}
            {{#if course.visible}}
                <div class="courseBox">
                    {{#link-to "course" course tagName="a" class="boxlink"}}
                        <div class="courseImageDiv">
                            <img {{bind-attr src=course.imageSrc}} />
                        </div>

                        <div class="courseHeader">
                            {{course.title}}
                        </div>
                    {{/link-to}}
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>

<div class="indexInfoArea">
    <div class="pageContent">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <h1>{{controller.settings.upcoming_courses}}</h1>
                <table class="table">
                    <tr>
                        <th>Dato</th>
                        <th>Tittel</th>
                        <th>Anbefalt aldersgruppe</th>
                        <th style="min-width: 100px;"></th>
                    </tr>

                    {{#each event in sortedEvents}}
                        {{#if event.isVisible}}
                            {{#if event.isInFuture}}
                                <tr>
                                    <td>{{dmy_no event.date}}</td>
                                    <td>{{event.name}}</td>
                                    <td>{{event.ageGroup}}</td>
                                    <td>{{link-to "Mer Info" "kodeklubb.event" event}}</td>
                                </tr>
                            {{/if}}
                        {{/if}}
                    {{/each}}
                </table>

                {{#if controller.epostliste.content}}
                    <h1>{{controller.settings.mailinglistHeader}}</h1>

                    {{markdown controller.epostliste.content}}
                {{/if}}
            </div>

            <div class="col-sm-12 col-md-5 col-md-offset-1 greenBorderLeft">
                <h1>{{controller.settings.updates_header}}</h1>
                {{#each update in updates}}
                    <div>
                        <h4>{{dmy update.publishedDate}} - {{update.title}}</h4>
                        {{markdown update.content}}
                        {{#if update.route}}
                            <div><a {{bind-attr href=update.route}}>Les Mer <span class="glyphicon glyphicon-chevron-right"></span></a></div>
                        {{/if}}
                    </div>
                    <hr width="25%" />

                {{/each}}
            </div>


            {{#if controller.settings.adsenseLeaderboard}}
                <div align="center">
                    {{markdown controller.settings.adsenseLeaderboard}}
                </div>
            {{/if}}
        </div>

    </div>
</div>

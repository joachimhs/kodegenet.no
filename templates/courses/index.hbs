<div class="pageContent">
    <div class="row">
        {{#each course in controller.arrangedContent}}
            {{#if course.visible}}
                <div class="col-md-12">
                    <div class="courseIntroBox">
                        <div class="courseIntroBoxHeader">
                            <h1>{{course.title}}</h1>
                        </div>
                        <div class="courseIntroBoxContent">
                            <div class="row text-left">
                                <div class="col-md-4">
                                    <img {{bind-attr src=course.imageSrc}} style="width: 90%;" />
                                </div>
                                <div class="col-md-8 chapterIntro">
                                    {{course.intro}}


                                    <table class="subchapterBox">
                                        {{#each chapter in course.chapters}}
                                            <tr>
                                                <td class="numberCell">
                                                    {{#link-to "chapter" course chapter}}
                                                        <div class="oppgavekapittelBox">
                                                            {{chapter.kapittel}}
                                                        </a>
                                                    {{/link-to}}
                                                    </div>
                                                </td>
                                                <td>
                                                    {{#link-to "chapter" course chapter}}
                                                        <h2>{{chapter.tittel}}</h2>
                                                        <div class="oneliner">{{chapter.oneliner}}</div>
                                                    {{/link-to}}
                                                </td>
                                            </tr>
                                        {{/each}}
                                    </table>
                                </div>
                            </div>

                        </div>
                        <div class="courseIntroBoxHeader">
                            {{#link-to "course" course class="btn btn-default" tagName="a"}}Start{{/link-to}}
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>